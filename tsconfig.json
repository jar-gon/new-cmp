{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "~/apis/*": [ "apis/*" ],
      "~/assets/*": [ "assets/*" ],
      "~/components/*": [ "components/*" ],
      "~/icons/*": [ "icons/*" ],
      "~/modals/*": [ "modals/*" ],
      "~/models/*": [ "models/*" ],
      "~/modules/*": [ "modules/*" ],
      "~/styles/*": [ "styles/*" ],
      "~/utils/*": [ "utils/*" ]
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
