.renew
  &-item
    margin-bottom 20px

    &-label
      padding 20px 0
      color $heading-color

    &-control
      &-title
        line-height 40px
        font-size 24px
        color $primary-color

      &-desc
        padding 2px 0 4px
        line-height $line-height
        font-size $font-size-base
        color $heading-color

      &-price
        font-size 20px
        color $heading-color

      .flex-between-center
        min-height 48px

  &--version
    display block
    margin-top 10px

  &-summary
    padding 15px 20px
    width 470px
    line-height 34px
    border 1px solid $border-color-split
    border-radius $border-radius-base
    background $background-color-light

    &-item
      @extend .flex-between

      &-value
        color $heading-color

  &-btn
    width 470px
    height 50px
