.ant-form

  &-item
    font-size $font-size-sm

    &-control
      line-height 32px

      &-wrapper
        display inline-block
        vertical-align top

    &-label
      width 100px
      line-height 32px
      text-align left
      vertical-align top

  label
    font-size $font-size-sm

    &:before, &:after
        content ''
        margin 0

  .ant-form-item-required:after
    content '*'
    margin-left 4px
    color $red

  &-hide-required-mark

    .ant-form
      &-item
        &-required:after
          display none

  &-extra, &-explain
    @extend .font-size_10
    display block
    @extend .transform-origin_left

  &-extra
    margin 10px 0 -10px

  &-explain
    padding 10px 0

  &-vertical

    .ant-form
      &-item
        margin-bottom 0
        padding-bottom 12px

        &-label
          line-height $line-height

        &-with-help
          padding-bottom 0

      &-explain
        margin-bottom -2px

  &-inline

    .ant-input, .ant-select
      width 220px

    .ant-calendar-picker
      &-input
        width 550px
