.yq-radio-group
  vertical-align top

  .ant-radio
    &-button-wrapper
      margin-right 20px
      min-width 108px
      text-align center
      vertical-align top
      border 1px solid $border-color-base
      border-radius $border-radius-base

      &:not(:first-child)::before
        display none

      &-checked:not(.ant-radio-button-wrapper-disabled)
        box-shadow none
        border-color $primary-color

        &:hover
          color $primary-color

  &-img

    .ant-radio
      &-button-wrapper
        display inline-flex
        justify-content center
        align-items center
        margin-right 20px
        min-width 130px
        height 50px

        img
          max-width 84px
          max-height 25px

        &-checked
          background transparent

          &:after
            position absolute
            right 0
            bottom 0
            content ''
            width 15px
            height 15px
            background url('../assets/check-triangle.png') right bottom no-repeat
            background-size 15px 15px
